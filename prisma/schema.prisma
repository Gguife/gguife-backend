// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definição das tabelas (models)
model Users {
  id          Int       @id @default(autoincrement())
  username    String    @unique @db.VarChar(25)
  password    String    @db.VarChar(255)
  articles    Articles[] // Relacionamento 1:N com Article
  projects    Projects[] // Relacionamento 1:N com Project
}

model Articles {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  introduction String    @db.VarChar(255)
  content      String    @db.Text 
  imageUrl     String?   @db.VarChar(255)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  tags         Tags[]     @relation("ArticleTag") // Relacionamento N:N com Tags
  userId       Int       // Relacionamento 1:N com User
  user         Users      @relation(fields: [userId], references: [id])
}

model Tags {
  id       Int        @id @default(autoincrement()) 
  tagName  String     @db.VarChar(50) @unique
  articles Articles[]  @relation("ArticleTag") // Relacionamento N:N com Article
}

model Projects {
  id             Int          @id @default(autoincrement())
  title          String       @db.VarChar(255)
  content        String       @db.Text
  tools          String       
  linkDeploy     String?
  linkRepository String?
  imageUrl       String?       @db.VarChar(255)
  categories     String        @db.VarChar(50)
  userId         Int           // Relacionamento 1:N com User
  user           Users          @relation(fields: [userId], references: [id])
}
