generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Definição das tabelas (models)
model User {
  id          Int      @id @default(autoincrement())
  username    String   @unique @db.VarChar(25)
  password    String   @db.VarChar(255)
}

model Articles {
  id           Int       @id @default(autoincrement())
  title        String    @db.VarChar(255)
  introduction String    @db.VarChar(255)
  content      String    @db.Text 
  imageUrl     String?   @db.VarChar(255)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  tags         Tags[]    @relation("ArticleTag") // Relacionamento N:N com Tags
}

model Tags {
  id       Int     @id @default(autoincrement()) 
  tagName  String  @db.VarChar(50) @unique
  articles Articles[]  @relation("ArticleTag") // Relacionamento N:N com Blog
}

model Projects {
  id             Int          @id @default(autoincrement())
  title          String       @db.VarChar(255)
  content        String       @db.Text
  tools          String       
  linkDeploy     String?
  linkRepository String?
  imageUrl       String?       @db.VarChar(255)
  categories     Categories[]  @relation("ProjectCategory") // Relacionamento N:N com Categorias
}

model Categories {
  id        Int        @id @default(autoincrement())
  name      String     @db.VarChar(255)
  projects  Projects[] @relation("ProjectCategory")
}